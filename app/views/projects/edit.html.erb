<div id="container">
  <% if current_user %>
    <h2>Editing Project</h2>
    
    <!-- The following loop is just a form for input -->
    <%= form_for :project, url: project_path(@project), method: :patch do |f| %>
      <% if @project.errors.any? %> <!-- Check for form input errors -->
        <div>
          <%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:<br>
          <% @project.errors.full_messages.each do |msg| %>
            <%= msg %><br>
          <% end %>
        </div>
      <% end %>
      <!-- Start of input form -->
      <p>
        <%= f.label :name %><br>
        <%= f.text_field :name, placeholder: "Required" %>
      </p>
      <p>
        <%= f.label :image %><br>
        <%= f.text_field :image, placeholder: "Optional"  %>
      </p>
      <p>
        <%= f.label :video %><br>
        <%= f.text_field :video, placeholder: "Optional"  %>
      </p>
      <p>
        <%= f.label :description %><br>
        <%= f.text_area :description, placeholder: "Required" %>
      </p>
      <p><%= f.submit "Save Project Changes" %></p>
    <% end %>
    
    <br><br><br><!-- Much needed whitespace -->
    
    <%= link_to 'Back  to Projects', project_path(@project), :class=>"backward" %>
  <% else %>
    <h2>LOGIN TO VIEW CONTENT</h2>
  <% end %>
</div>